Q.1 On Palindrome

public class string{
    public static void main(String[] args){
        String str="Yash";
        int left=0,right=str.length()-1;
        boolean isPalindrome=true;
        while(left<right){
            if(str.charAt(left)!=str.charAt(right)){
                isPalindrome=false;
                break;
            }
            left++;
            right--;
        }
        if(isPalindrome==false){
            System.out.println("It is not an Palindrome");
        }
        else{
            System.out.println("It is an Palindrome");
        }
    }
}

Q2.total numbers of Vowels and Consonents
public class string{
    static void countVowelConsonents(String str){
        int Vowelscount=0,Consonentscount=0;
        for(int i=0;i<str.length();i++){
             char ch=str.charAt(i);
             if(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u'){
                 Vowelscount++;
             }
             else if(ch>='a'&&ch<='z'){
                 Consonentscount++;
             }
            
        }
        System.out.println("total Vowels are="+Vowelscount+"total Consonents are="+Consonentscount);
    }
    public static void main(String[] args){
        countVowelConsonents("Rohan1234".toLowerCase());
    }
}
